{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subscriptions list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Surname</th>
                <th>Subdate</th>
                <th>Email</th>
                <th>Subarea_id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for subscription in subscriptions %}
            <tr>
                <td><a href="{{ path('subscription_show', { 'id': subscription.id }) }}">{{ subscription.id }}</a></td>
                <td>{{ subscription.firstname }}</td>
                <td>{{ subscription.surname }}</td>
                <td>{% if subscription.subdate %}{{ subscription.subdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ subscription.email }}</td>
                <td>{{ subscription.subareaid }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('subscription_show', { 'id': subscription.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('subscription_edit', { 'id': subscription.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subscription_new') }}">Create a new subscription</a>
        </li>
    </ul>
{% endblock %}
